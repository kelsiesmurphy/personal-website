---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/react/navigation";
import ProjectNavigation from "../components/react/project-navigation";
---

<script>
  import Lenis from "lenis";

  const lenis = new Lenis({ lerp: 0.9 });

  function raf(time: number) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);
</script>

<html lang="en">
  <head>
    <BaseHead
      title={"Kelsie Murphy | Software Engineer"}
      description={"Kelsie Murphy's Personal Website"}
    />
  </head>
  <body
    class="bg-[#f1ede5] antialiased selection:text-white selection:bg-orange-950"
  >
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:bg-orange-950 focus:text-white focus:p-2 focus:rounded focus:z-50"
    >
      Skip to content
    </a>

    <main class="min-h-screen flex flex-col">
      <ProjectNavigation
        currentProjectName={Astro.url.pathname.split("/").filter(Boolean).pop()}
        client:load
      />
      <section id="main-content" class="flex-1 flex flex-col">
        <slot />
      </section>
    </main>
  </body>
</html>
